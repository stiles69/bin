# Specific for Arch
alias sshd-stop="sudo systemctl stop sshd.service"
alias sshd-start="sudo systemctl start sshd.service"
alias sshd-status="sudo systemctl status sshd.service"
alias sshd-restart="sudo systemctl restart sshd.service"
alias sshd-disable="sudo systemctl disable sshd.service"
alias sshd-enable="sudo systemctl enable sshd.service"
alias dev_appserver.py='python2.7 $HOME/google-cloud-sdk/bin/dev_appserver.py'

# Pretty-print of some PATH variables:
alias path='echo -e ${PATH//:/\\n}'
alias libpath='echo -e ${LD_LIBRARY_PATH//:/\\n}'

# -> Prevents accidentally clobbering files.
alias mkdir='mkdir -p'

#==== Running LibreELEC Installer
alias libre='sudo /mnt/Data/Software/LibreELEC.USB-SD.Creator.Linux-64bit.bin'

#===== Need this for ffmpeg ========
#alias ffmpeg='/usr/bin/ffmpeg-git'
